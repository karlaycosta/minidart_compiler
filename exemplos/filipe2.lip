    se (tarefas.vazio()) {
        imprima "Nenhuma tarefa encontrada.";
        retorne;
    }
    para i = 0 ate tarefas.tamanho() - 1 faca {
        mapa t = tarefas[i];
        texto status = t["concluida"] ? "âœ…" : "âŒ";

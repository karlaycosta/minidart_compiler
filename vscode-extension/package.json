{
  "name": "minidart",
  "displayName": "MiniDart Language Support",
  "description": "Suporte completo para a linguagem MiniDart v2.0 com listas tipadas, sistema de imports, bibliotecas padr√£o, debugger visual no VS Code e debug adapter protocol",
  "version": "2.1.0",
  "publisher": "deriks-karlay",
  "author": "Deriks Karlay Dias Costa <karlay@example.com>",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karlaycosta/minidart_compiler.git"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "minidart",
    "lipo",
    "dart",
    "portugu√™s",
    "portuguese",
    "compilador",
    "compiler",
    "ast",
    "listas",
    "lists",
    "educacional",
    "educational"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "minidart",
        "aliases": [
          "MiniDart",
          "minidart"
        ],
        "extensions": [
          ".mdart"
        ],
        "configuration": "./language/minidart-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "minidart",
        "scopeName": "source.minidart",
        "path": "./syntaxes/minidart.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "minidart",
        "path": "./snippets/minidart.json"
      }
    ],
    "breakpoints": [
      {
        "language": "minidart"
      }
    ],
    "commands": [
      {
        "command": "minidart.compile",
        "title": "üöÄ Compilar MiniDart",
        "category": "MiniDart",
        "icon": "$(play)"
      },
      {
        "command": "minidart.run",
        "title": "‚ñ∂Ô∏è Executar MiniDart",
        "category": "MiniDart",
        "icon": "$(run)"
      },
      {
        "command": "minidart.debug",
        "title": "üêõ Debug MiniDart",
        "category": "MiniDart",
        "icon": "$(debug-alt)"
      },
      {
        "command": "minidart.generateAST",
        "title": "üå≥ Gerar AST",
        "category": "MiniDart",
        "icon": "$(graph)"
      },
      {
        "command": "minidart.openAST",
        "title": "üëÅÔ∏è Visualizar AST",
        "category": "MiniDart",
        "icon": "$(eye)"
      },
      {
        "command": "minidart.newFile",
        "title": "üìÑ Novo Arquivo MiniDart",
        "category": "MiniDart",
        "icon": "$(new-file)"
      },
      {
        "command": "minidart.checkSyntax",
        "title": "‚úÖ Verificar Sintaxe",
        "category": "MiniDart",
        "icon": "$(check)"
      },
      {
        "command": "minidart.analyzeCode",
        "title": "üîç Analisar C√≥digo",
        "category": "MiniDart",
        "icon": "$(search)"
      },
      {
        "command": "minidart.formatCode",
        "title": "üí´ Formatar C√≥digo",
        "category": "MiniDart",
        "icon": "$(symbol-method)"
      },
      {
        "command": "minidart.showDocumentation",
        "title": "üìö Documenta√ß√£o",
        "category": "MiniDart",
        "icon": "$(book)"
      }
    ],
    "keybindings": [
      {
        "command": "minidart.run",
        "key": "ctrl+f5",
        "when": "resourceExtname == .mdart"
      },
      {
        "command": "minidart.debug",
        "key": "f5",
        "when": "resourceExtname == .mdart"
      },
      {
        "command": "minidart.compile",
        "key": "ctrl+shift+b",
        "when": "resourceExtname == .mdart"
      },
      {
        "command": "minidart.generateAST",
        "key": "ctrl+shift+a",
        "when": "resourceExtname == .mdart"
      },
      {
        "command": "minidart.checkSyntax",
        "key": "ctrl+shift+s",
        "when": "resourceExtname == .mdart"
      },
      {
        "command": "minidart.formatCode",
        "key": "ctrl+shift+f",
        "when": "resourceExtname == .mdart"
      },
      {
        "command": "minidart.showDocumentation",
        "key": "f1",
        "when": "resourceExtname == .mdart"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "minidart.run",
          "when": "resourceExtname == .mdart",
          "group": "navigation@1"
        },
        {
          "command": "minidart.debug",
          "when": "resourceExtname == .mdart",
          "group": "navigation@2"
        },
        {
          "command": "minidart.compile",
          "when": "resourceExtname == .mdart",
          "group": "navigation@3"
        },
        {
          "command": "minidart.checkSyntax",
          "when": "resourceExtname == .mdart",
          "group": "navigation@4"
        },
        {
          "command": "minidart.generateAST",
          "when": "resourceExtname == .mdart",
          "group": "analysis@1"
        },
        {
          "command": "minidart.analyzeCode",
          "when": "resourceExtname == .mdart",
          "group": "analysis@2"
        },
        {
          "command": "minidart.formatCode",
          "when": "resourceExtname == .mdart",
          "group": "formatting@1"
        },
        {
          "command": "minidart.showDocumentation",
          "when": "resourceExtname == .mdart",
          "group": "help@1"
        }
      ],
      "editor/title": [
        {
          "command": "minidart.run",
          "when": "resourceExtname == .mdart",
          "group": "navigation@1"
        },
        {
          "command": "minidart.debug",
          "when": "resourceExtname == .mdart",
          "group": "navigation@2"
        },
        {
          "command": "minidart.generateAST",
          "when": "resourceExtname == .mdart",
          "group": "navigation@3"
        },
        {
          "command": "minidart.checkSyntax",
          "when": "resourceExtname == .mdart",
          "group": "navigation@4"
        }
      ],
      "explorer/context": [
        {
          "command": "minidart.newFile",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
    "debuggers": [
      {
        "type": "minidart",
        "label": "MiniDart Debug",
        "program": "./out/debugMainStandalone.js",
        "runtime": "node",
        "languages": ["minidart"],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Arquivo MiniDart para executar",
                "default": "${workspaceFolder}/main.mdart"
              },
              "args": {
                "type": "array",
                "description": "Argumentos da linha de comando",
                "default": []
              },
              "cwd": {
                "type": "string",
                "description": "Diret√≥rio de trabalho",
                "default": "${workspaceFolder}"
              },
              "compilerPath": {
                "type": "string",
                "description": "Caminho para o compilador MiniDart",
                "default": "bin/compile.dart"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Parar automaticamente no in√≠cio do programa",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Debug MiniDart",
            "type": "minidart",
            "request": "launch",
            "program": "${file}",
            "stopOnEntry": false
          }
        ],
        "configurationSnippets": [
          {
            "label": "MiniDart: Debug File",
            "description": "Debug arquivo MiniDart atual",
            "body": {
              "name": "Debug MiniDart",
              "type": "minidart",
              "request": "launch",
              "program": "^\"\\${file}\"",
              "stopOnEntry": true
            }
          }
        ]
      }
    ],
    "configuration": {
      "title": "MiniDart",
      "properties": {
        "minidart.compilerPath": {
          "type": "string",
          "default": "bin/compile.dart",
          "description": "Caminho para o compilador MiniDart"
        },
        "minidart.autoCompile": {
          "type": "boolean",
          "default": false,
          "description": "Compilar automaticamente ao salvar"
        },
        "minidart.showAST": {
          "type": "boolean",
          "default": false,
          "description": "Gerar AST automaticamente"
        },
        "minidart.autoFormat": {
          "type": "boolean",
          "default": true,
          "description": "Formatar c√≥digo automaticamente"
        },
        "minidart.syntaxHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar realce de sintaxe avan√ßado"
        },
        "minidart.enableLinting": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar an√°lise de c√≥digo e avisos"
        },
        "minidart.enableSnippets": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar snippets de c√≥digo"
        },
        "minidart.showDocumentationOnHover": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar documenta√ß√£o ao passar o mouse"
        },
        "minidart.enableAutoCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar autocompletar inteligente"
        },
        "minidart.theme": {
          "type": "string",
          "default": "default",
          "enum": ["default", "dark", "light"],
          "description": "Tema para realce de sintaxe"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.68.0",
    "@vscode/debugprotocol": "^1.68.0"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.102.0",
    "typescript": "^4.9.5"
  },
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/karlaycosta/minidart_compiler/issues"
  },
  "homepage": "https://github.com/karlaycosta/minidart_compiler#readme"
}
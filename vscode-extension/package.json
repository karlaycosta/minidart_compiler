{
  "name": "lipo",
  "displayName": "LiPo - Linguagem Portugol",
  "description": "Suporte  linguagem LiPo e depurador para Visual Studio Code",
  "version": "2.3.0",
  "publisher": "karlaycosta",
  "author": "Deriks Karlay Dias Costa <karlaycosta@gmail.com>",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karlaycosta/lipo_compiler.git"
  },
  "homepage": "https://github.com/karlaycosta/lipo_compiler#readme",
  "bugs": {
    "url": "https://github.com/karlaycosta/lipo_compiler/issues"
  },
  "qna": "https://github.com/karlaycosta/lipo_compiler/discussions",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages",
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "lipo",
    "dart",
    "portugu칡s",
    "portuguese",
    "compilador",
    "compiler",
    "educational"
  ],
  "main": "./out/extension.js",
  "activationEvents": [],
  "contributes": {
    "languages": [
      {
        "id": "lipo",
        "aliases": [
          "LiPo",
          "lipo"
        ],
        "extensions": [
          ".lip"
        ],
        "configuration": "./language/lipo-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "lipo",
        "scopeName": "source.lipo",
        "path": "./syntaxes/lipo.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "lipo",
        "path": "./snippets/lipo.json"
      }
    ],
    "breakpoints": [
      {
        "language": "lipo"
      }
    ],
    "commands": [
      {
        "command": "lipo.compile",
        "title": "游 Compilar LiPo",
        "category": "LiPo",
        "icon": "$(play)"
      },
      {
        "command": "lipo.run",
        "title": "郊윒잺 Executar LiPo",
        "category": "LiPo",
        "icon": "$(run)"
      },
      {
        "command": "lipo.debug",
        "title": "游냍 Debug LiPo",
        "category": "LiPo",
        "icon": "$(debug-alt)"
      },
      {
        "command": "lipo.newFile",
        "title": "游늯 Novo Arquivo LiPo",
        "category": "LiPo",
        "icon": "$(new-file)"
      }
    ],
    "keybindings": [
      {
        "command": "lipo.run",
        "key": "ctrl+f5",
        "when": "resourceExtname == .lip"
      },
      {
        "command": "lipo.debug",
        "key": "f5",
        "when": "resourceExtname == .lip"
      },
      {
        "command": "lipo.compile",
        "key": "ctrl+shift+b",
        "when": "resourceExtname == .lip"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "lipo.run",
          "when": "resourceExtname == .lip",
          "group": "navigation@1"
        },
        {
          "command": "lipo.debug",
          "when": "resourceExtname == .lip",
          "group": "navigation@2"
        },
        {
          "command": "lipo.compile",
          "when": "resourceExtname == .lip",
          "group": "navigation@3"
        }
      ],
      "editor/title": [
        {
          "command": "lipo.run",
          "when": "resourceExtname == .lip",
          "group": "navigation@1"
        },
        {
          "command": "lipo.debug",
          "when": "resourceExtname == .lip",
          "group": "navigation@2"
        }
      ],
      "explorer/context": [
        {
          "command": "lipo.newFile",
          "when": "explorerResourceIsFolder",
          "group": "navigation"
        }
      ]
    },
    "debuggers": [
      {
        "type": "lipo",
        "label": "LiPo Debug",
        "languages": ["lipo"],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Arquivo LiPo para executar",
                "default": "${workspaceFolder}/main.lip"
              },
              "args": {
                "type": "array",
                "description": "Argumentos da linha de comando",
                "default": []
              },
              "cwd": {
                "type": "string",
                "description": "Diret칩rio de trabalho",
                "default": "${workspaceFolder}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Parar automaticamente no in칤cio do programa",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Debug LiPo",
            "type": "lipo",
            "request": "launch",
            "program": "${file}",
            "stopOnEntry": false
          }
        ],
        "configurationSnippets": [
          {
            "label": "LiPo: Debug File",
            "description": "Debug arquivo LiPo atual",
            "body": {
              "name": "Debug LiPo",
              "type": "LiPo",
              "request": "launch",
              "program": "^\"\\${file}\"",
              "stopOnEntry": true
            }
          }
        ]
      }
    ],
    "configuration": {
      "title": "LiPo",
      "properties": {
        "lipo.autoCompile": {
          "type": "boolean",
          "default": false,
          "description": "Compilar automaticamente ao salvar"
        },
        "lipo.autoFormat": {
          "type": "boolean",
          "default": true,
          "description": "Formatar c칩digo automaticamente"
        },
        "lipo.syntaxHighlighting": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar realce de sintaxe avan칞ado"
        },
        "lipo.enableLinting": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar an치lise de c칩digo e avisos"
        },
        "lipo.enableSnippets": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar snippets de c칩digo"
        },
        "lipo.showDocumentationOnHover": {
          "type": "boolean",
          "default": true,
          "description": "Mostrar documenta칞칚o ao passar o mouse"
        },
        "lipo.enableAutoCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Habilitar autocompletar inteligente"
        },
        "lipo.theme": {
          "type": "string",
          "default": "default",
          "enum": ["default", "dark", "light"],
          "description": "Tema para realce de sintaxe"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.68.0",
    "@vscode/debugprotocol": "^1.68.0"
  },
  "devDependencies": {
    "@types/node": "^16.18.126",
    "@types/vscode": "^1.102.0",
    "typescript": "^4.9.5"
  },
  "license": "ISC",
  "type": "commonjs"
}